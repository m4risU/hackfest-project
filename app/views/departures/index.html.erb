<table class="table table-striped table-bordered table-condensed">
  <thead>
  <tr>
    <th colspan="16"><%= @route %></th>
  </tr>
  <tr>
    <% 8.times do %>
      <th>Czas</th>
      <th>Akcje</th>
    <% end %>
  </tr>
  </thead>
  <tbody>
  <% @departures.in_groups_of(8).each do |group| %>
    <tr>
      <% group.each do |departure| %>
        <% if departure %>
          <td><%= raw departure.to_s %></td>
          <td><%= link_to "UsuÅ„", route_location_departure_path(@route, @location, departure), :method => :delete, :remote => true %></td>
        <% else %>
          <td colspan="2">&nbsp;</td>
        <% end %>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

