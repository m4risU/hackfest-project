<table class="table table-striped table-bordered table-condensed">
  <thead>
  <tr>
    <th colspan="16">Odjazdy: <%= @location %> <%= @route %></th>
  </tr>
  </thead>
  <tbody>
  <% @departures.in_groups_of(8).each do |group| %>
    <tr>
      <% group.each do |departure| %>
        <% if departure %>
          <td><%= departure.to_s %></td>
          <td>&nbsp;</td>
        <% else %>
          <td colspan="2">&nbsp;</td>
        <% end %>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

